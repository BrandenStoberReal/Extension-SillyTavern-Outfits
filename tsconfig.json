{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "outDir": "./out",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
      "globals.d.ts",
      "../types/*.ts",
      "../types/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "bin"
    ]
}
